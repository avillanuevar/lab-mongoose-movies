<div class="container">

  <h1>Create a new artist</h1>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/celebrities/add" method="POST">
        <div class="form-group">
          <label for="field1">Name</label>
          <input type="text" class="form-control" id="field1" name="celebName">
        </div>
        <div class="form-group">
          <label for="field2">Occupation</label>
          <input type="text" class="form-control" id="field2" name="celebOccupation">
        </div>
        <div class="form-group">
          <label for="field3">Catch phrase</label>
          <input type="text" class="form-control" id="field3" name="description">
        </div>
       
        <button type="submit" class="btn btn-dark">Create a Celebrity</button>
      </form>

    </div>
  </div>
</div>